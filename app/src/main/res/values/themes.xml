<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApnaBank" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppCompat.SearchView.CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:queryBackground">@color/blue</item>
        <item name="android:background">@drawable/bg_searchview</item>
        <item name="android:tint">@color/blue</item>
    </style>
    <style name="Button.color" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/backgroundBlue</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/bg_searchview</item>
    </style>
</resources>